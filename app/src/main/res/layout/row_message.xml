<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="messageRowModel" type="com.marveloustandur.app.modules.message.data.model.MessageRowModel"/>
    </data>
    <FrameLayout android:id="@+id/frameChat"
        android:layout_height="wrap_content" android:layout_width="match_parent">
        <View
            android:background="@drawable/rectangle_bg_name_gray_100_radius_28"
            android:id="@+id/viewAvatarOne"
            android:layout_gravity="top|start"
            android:layout_height="@dimen/_56pxh" android:layout_width="@dimen/_56pxh"/>
        <LinearLayout android:id="@+id/linearRowesther"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <FrameLayout android:id="@+id/frameProfile"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_56pxv" android:layout_width="@dimen/_56pxh">
                <ImageView android:id="@+id/imageEstherHoward"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_56pxh"
                    android:layout_width="@dimen/_56pxh"
                    android:scaleType="centerCrop" circular="@{true}"
                    imageRes="@{@drawable/img_image_56x56}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_image_56x56"/>
                <View
                    android:background="@drawable/rectangle_bg_name_teal_a700_border_name_onprimarycontainer_opacity_1_radius_8"
                    android:id="@+id/viewDotOne"
                    android:layout_gravity="bottom|end"
                    android:layout_height="@dimen/_16pxh" android:layout_width="@dimen/_16pxh"/>
            </FrameLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearNamedescription"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEstherhoward"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.0"
                    android:lineSpacingExtra="@dimen/_5pxh"
                    android:singleLine="true"
                    android:text="@{messageRowModel.txtEstherhoward}"
                    style="@style/txtPlusJakartaSansbold18" tools:text="@string/lbl_esther_howard"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLoremipsumdolor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.0"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="@{messageRowModel.txtLoremipsumdolor}"
                    style="@style/txtPlusJakartaSansmedium14" tools:text="@string/msg_lorem_ipsum_dolor4"/>
            </LinearLayout>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearColumntime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTime"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.0"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="@{messageRowModel.txtTime}"
                    style="@style/txtPlusJakartaSanssemibold12_2" tools:text="@string/lbl_10_20"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtGroup162722"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.0"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:paddingBottom="@dimen/_5pxv"
                    android:paddingEnd="@dimen/_8pxh"
                    android:paddingStart="@dimen/_8pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@{messageRowModel.txtGroup162722}"
                    style="@style/txtSolidRounded_1" tools:text="@string/lbl_2"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
